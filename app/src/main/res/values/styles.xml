<resources>

    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorOrange</item>
        <item name="colorPrimaryDark">@color/colorOrange</item>
        <item name="colorAccent">@color/colorOrange</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:navigationBarColor">@color/colorTransparent</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.Welcome" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorOrange</item>
        <item name="colorPrimaryDark">@color/colorOrange</item>
        <item name="colorAccent">@color/colorOrange</item>
        <item name="android:windowBackground">@color/colorOrange</item>
        <item name="android:navigationBarColor">@color/colorOrange</item>
    </style>

    <style name="AppTheme.AuthCommon" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="windowActionBar">false</item>
        <item name="colorAccent">@color/colorOrange</item>
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <style name="AppTheme.Dashboard" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorOrange</item>
        <item name="colorPrimaryDark">@color/colorOrange</item>
        <item name="windowActionBar">false</item>
        <item name="colorAccent">@color/colorOrange</item>
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <style name="AppTheme.Details" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorOrange</item>
        <item name="colorPrimaryDark">@color/colorOrange</item>
        <item name="windowActionBar">false</item>
        <item name="colorAccent">@color/colorOrange</item>
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

</resources>
